//- add button
mixin addButton
  div.row
    div(class='large-12 colulmns')
      a(href='/gallery/new')
        button.btn(id='addPhoto' data-action='bea') ADD PHOTO


//- ==================== edit button =================================

//- edit button
mixin editButton
  div.row
    div(class='large-12 colulmns')
      a(href='/gallery/signIn')
        button.btn(id='editPhoto' data-action='bea') EDIT PHOTO


