//- gallery header
mixin galleryHeader
  div.row
    div(class='medium-6 large-6 columns')
      h1 _ARCHITEKT
    div(class='medium-6 large-6 columns')
      p.lead Welcome to out online portfolio, we are small group of passionate designers and architects, looking to change and create amazing digital Photos to inspire others to follow in our innovative steps.  Free Architect WordPress Theme

//- single header
mixin singleHeader
  div.row
    div(class='small-12 medium-12 large-12 columns')
      h1 _ARCHITEKT


//- =================== / ========================================

//- big picture in listing
mixin galleryHeaderPhoto(mainPhoto)
  div.row
    div(id='galleryHeaderPhoto' class='small-12 medium-12 large-12 columns')
      img(src='#{mainPhoto.url}')


//- thumbnail of pictures 3X2 for the home page
mixin thumbnail(photos)
  div.row
    each photo in photos
      div(id='thumbPhoto' class='small-12 medium-4 large-4 columns')
        a(href='./gallery/' + photo.id)
          img(src='#{photo.url}')
        h2= photo.title
        p.lead= photo.description

//- ================== /gallery ====================================

//- gallery main picture
mixin idMainPic(mainPhoto, photos)
  div.row
    div(id='idMainPic' class='small-12 medium-8 large-8 columns')
      h2= mainPhoto.title
      img(src='#{mainPhoto.url}')
      p.lead= mainPhoto.description
      a(href='/gallery/new')
        button.btn(id='addPhoto' data-action='bea') ADD PHOTO
      a(href='/gallery/:id/edit')
        button.btn(id='editPhoto' data-action='bea') EDIT PHOTO

    div(id='sidebarPics' class='small-12 medium-4 large-4 columns')
      each photo in photos
        a(href='./gallery/' + photo.id)
          img(src='#{photo.url}')
        h2= photo.title


//- ================== /singlePhoto ===============================

//- singlePhoto
mixin singlePhoto(photo)
  div.row
    div(class='small-12 medium-12 large-12 columns')
      h2= photo.title
      a(href='./gallery/' + photo.id)
          img(src='#{photo.url}')
      p= photo.description

//- ================== /signIn ====================================

//- sign in
mixin signIn
  form(action='/galleryID/signIn', method='post')
    div.row
      div(class='small-12 medium-12 large-12 columns')
        label USERNAME
          input(type='text', name='username')
        label PASSWORD
          input(type='text', name='password')



//- ==================== /new ======================================

//- add a photo
mixin addAPhoto
  form(action='/gallery/new', method='post')
    div.row
      div(class='small-12 medium-12 large-12 columns')
        label TITLE
          input(type='text', name='title')
        label URL
          input(type='text', name='url')
        label DESCRIPTION
          input(type='text', name='description')
        label AUTHOR
          input(type='text', name='author')

